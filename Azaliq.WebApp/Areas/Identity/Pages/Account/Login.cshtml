@page
@model Azaliq.WebApp.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form id="loginForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Log in to your account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.UsernameOrEmail" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                <label asp-for="Input.UsernameOrEmail">Email</label>
                <span asp-validation-for="Input.UsernameOrEmail" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label">Remember me?</label>
            </div>

            <button id="loginSubmit" type="submit" class="w-100 btn btn-primary btn-lg">Log in</button>
        </form>

        <hr />

        <div class="text-center mt-4">
            <p>Or log in with:</p>
            @if (Model.ExternalLogins?.Count > 0)
            {
                @foreach (var provider in Model.ExternalLogins)
                {
                    <form method="post" asp-page="./ExternalLogin" asp-route-provider="@provider.Name" asp-route-returnUrl="@Model.ReturnUrl" class="mb-2">
                        <button type="submit" class="btn btn-outline-primary w-100">
                            <i class="fab fa-@provider.Name.ToLower() me-2"></i> Log in with @provider.DisplayName
                        </button>
                    </form>
                }
            }
            else
            {
                <p>No external login providers configured.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}