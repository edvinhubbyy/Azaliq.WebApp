@page
@model Azaliq.WebApp.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-5">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.UsernameOrEmail"
                       class="form-control"
                       placeholder="Username or email"
                       autocomplete="username" />
                <label asp-for="Input.UsernameOrEmail">Username or Email</label>
                <span asp-validation-for="Input.UsernameOrEmail" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password"
                       class="form-control"
                       placeholder="Password"
                       autocomplete="current-password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label">Remember me</label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Log in</button>

            <div class="mt-4">
                <p>
                    <a asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register">Register as a new user</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}