@* Layout for Manage pages *@
@{
    Layout = "/Views/Shared/_Layout.cshtml"; // main site layout with top navbar
}

<div class="container my-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="card shadow-sm sticky-top" style="top: 80px;">
                <div class="card-body p-2">
                    <partial name="_ManageNav" />
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-body">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

@RenderSection("Scripts", required: false)