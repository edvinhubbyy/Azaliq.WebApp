@page "/Account/Manage/Profile"
@model Microsoft.AspNetCore.Mvc.RazorPages.PageModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "My Profile";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse min-vh-100">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a class="nav-link active text-white" asp-page="/Account/Manage/Profile">
                            <i class="bi bi-person-circle me-2"></i> Profile
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-light" asp-page="/Account/Manage/Email">
                            <i class="bi bi-envelope me-2"></i> Email Settings
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-light" asp-page="/Account/Manage/ChangePassword">
                            <i class="bi bi-lock me-2"></i> Change Password
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-light" asp-page="/Account/Manage/ExternalLogins">
                            <i class="bi bi-box-arrow-in-right me-2"></i> External Logins
                        </a>
                    </li>
                    <li class="nav-item mt-4">
                        <a class="nav-link text-danger fw-bold" asp-page="/Account/Logout">
                            <i class="bi bi-door-closed me-2"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">My Profile</h3>
                    <i class="bi bi-gear"></i>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 text-center">
                            <img src="https://via.placeholder.com/150" class="rounded-circle shadow-sm mb-3" alt="Profile Picture">
                            <h5>@User.Identity?.Name</h5>
                            <p class="text-muted">Administrator</p>
                        </div>
                        <div class="col-md-8">
                            <p><strong>Email:</strong> someone@example.com</p>
                            <p><strong>Phone:</strong> 999999999</p>

                            <a class="btn btn-outline-primary btn-sm me-2" asp-page="/Account/Manage/Email">
                                <i class="bi bi-pencil"></i> Update Email
                            </a>
                            <a class="btn btn-outline-warning btn-sm" asp-page="/Account/Manage/ChangePassword">
                                <i class="bi bi-shield-lock"></i> Change Password
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>