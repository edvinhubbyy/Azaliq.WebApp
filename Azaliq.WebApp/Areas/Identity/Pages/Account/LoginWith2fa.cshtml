@page
@model Azaliq.WebApp.Areas.Identity.Pages.Account.LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <input type="hidden" asp-for="RememberMe" />

            <div asp-validation-summary="All" class="text-danger mb-2"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="one-time-code" />
                <label asp-for="Input.TwoFactorCode">Security code</label>
                <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Verify</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}