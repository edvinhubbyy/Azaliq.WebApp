@model Azaliq.ViewModels.Product.ProductDetailsViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.Name" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p class="text-muted">@Model.Description</p>
            <p><strong>Category:</strong> @Model.Category</p>
            <p><strong>Price:</strong> @Model.Price</p>

            @if (Model.IsSameDayDeliveryAvailable)
            {
                <span class="badge bg-success">Same-day Delivery</span>
            }

            <p class="mt-3">
                <strong>Tags:</strong>
                @foreach (var tag in Model.Tags)
                {
                    <span class="badge bg-secondary me-1">@tag</span>
                }
            </p>

            @if (Model.IsAvailable)
            {
                <form method="post" asp-controller="Cart" asp-action="Add">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <button type="submit" class="btn btn-primary mt-3">Add to Cart</button>
                </form>
            }
            else
            {
                <p class="text-danger mt-3">Currently not available</p>
            }

            <!-- Edit button below -->
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mt-3">
                <i class="fas fa-edit me-1"></i> Edit
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mt-3">
                <i class="fas fa-edit me-1"></i> Delete
            </a>
        </div>
    </div>
</div>