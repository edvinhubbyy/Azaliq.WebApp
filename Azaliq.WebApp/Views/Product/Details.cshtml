@model Azaliq.ViewModels.Product.ProductDetailsViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="card shadow-sm border rounded">
        <div class="row g-0">
            <div class="col-md-5">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded-start" style="object-fit: cover; height: 100%; width: 100%;" />
            </div>
            <div class="col-md-7">
                <div class="card-body">
                    <h2 class="card-title">@Model.Name</h2>
                    <h5 class="text-muted mb-3">Category: @Model.Category</h5>
                    <p class="card-text">@Model.Description</p>

                    <p class="mt-3 mb-1"><strong>Price:</strong> <span class="text-success">@Model.Price лв.</span></p>
                    <p class="mb-1"><strong>Quantity:</strong> @Model.Quantity</p>
                    <p class="mb-3"><strong>Same-day delivery:</strong> @(Model.IsSameDayDeliveryAvailable ? "Yes" : "No")</p>

                    @if (Model.Tags.Any())
                    {
                        <div class="mb-3">
                            <strong>Tags:</strong>
                            @foreach (var tag in Model.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag</span>
                            }
                        </div>
                    }

                    <div class="d-flex flex-wrap gap-2">
                        <form asp-controller="Cart" asp-action="Add" method="post" class="mb-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="productId" value="@Model.Id" />
                            <button type="submit" class="btn btn-success d-flex align-items-center">
                                <i class="fas fa-cart-plus me-1"></i> Add to Cart
                            </button>
                        </form>

                        <form asp-controller="Favorites" asp-action="Add" method="post" class="mb-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="productId" value="@Model.Id" />
                            <button type="submit" class="btn btn-outline-danger d-flex align-items-center">
                                <i class="fas fa-heart me-1"></i> Toggle Favorite
                            </button>
                        </form>

                        <a asp-controller="Reviews" asp-action="ProductReviews" asp-route-productId="@Model.Id" class="btn btn-info mb-2 d-flex align-items-center">
                            <i class="fas fa-comments me-1"></i> View All Reviews
                        </a>

                        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                        {
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mb-2 d-flex align-items-center">
                                <i class="fas fa-edit me-1"></i> Edit
                            </a>

                            <form asp-controller="Product" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this product?');" class="mb-2">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger d-flex align-items-center">
                                    <i class="fas fa-trash-alt me-1"></i> Delete
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>