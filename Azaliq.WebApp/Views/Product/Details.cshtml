@model Azaliq.ViewModels.Product.ProductDetailsViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="row g-0">
            <div class="col-md-5">
                <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Name" style="object-fit: cover; height: 100%; width: 100%;" />
            </div>
            <div class="col-md-7">
                <div class="card-body p-4">
                    <h2 class="card-title">@Model.Name</h2>
                    <h5 class="text-muted">Category: @Model.Category</h5>
                    <p class="card-text mt-3">@Model.Description</p>
                    <p class="card-text">
                        <strong>Price:</strong> <span class="text-success">@Model.Price лв.</span>
                    </p>
                    <p>
                        <strong>Available:</strong> @Model.IsAvailable
                        <br />
                        <strong>Same-day delivery:</strong> @(Model.IsSameDayDeliveryAvailable ? "Yes" : "No")
                    </p>

                    @if (Model.Tags.Any())
                    {
                        <div class="mb-3">
                            <strong>Tags:</strong>
                            @foreach (var tag in Model.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag</span>
                            }
                        </div>
                    }

                    <div class="d-flex gap-2 mt-4">
                        <form asp-controller="Cart" asp-action="Add" method="post">
                            <input type="hidden" name="productId" value="@Model.Id" />
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-cart-plus me-1"></i> Add to Cart
                            </button>
                        </form>

                        <form asp-controller="Favorites" asp-action="Add" method="post">
                            <input type="hidden" name="productId" value="@Model.Id" />
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="fas fa-heart me-1"></i> Toggle Favorite
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
