@{
    ViewData["Title"] = "Unexpected Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center py-5" style="background-color:#f8f0fa;">
    <h1 class="display-1 text-secondary fw-bold">@ViewData["StatusCode"]</h1>
    <h2 class="text-muted mb-3">Unexpected error</h2>
    <p>Something went wrong in the garden of Azaliq. Please try again later.</p>
    <a href="/" class="btn btn-outline-dark rounded-pill mt-4">🌷 Back to Safety</a>
</div>