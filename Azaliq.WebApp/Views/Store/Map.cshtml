@model Azaliq.ViewModels.Store.StoreLocationViewModel

@using Azaliq.Data.Models.Models.Enum
@using Azaliq.Data.Models.Models.Enum.Phone

@{
    ViewData["Title"] = $"Map for {Model.Name}";
}

<h2 class="mb-4 text-primary fw-semibold">@Model.Name</h2>

<div class="mb-4">
    <p><strong>Address:</strong> @Model.Address</p>
    <p><strong>Phone:</strong> @(Model.CountryCode.ToPhonePrefix()) @Model.Phone</p>
</div>

<div class="map-container mb-4 rounded shadow-sm overflow-hidden">
    <iframe src="@Model.GoogleMapsUrl"
            width="100%"
            height="600"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        class="map-iframe">
    </iframe>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to Stores List</a>

<style>
    .map-container {
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 4px 12px rgba(255, 192, 203, 0.25);
        height: 600px;  /* match iframe height */
    }

    .map-iframe {
        width: 100%;
        height: 100%;  /* fill container */
        border: none;
        display: block;
    }

    .btn-secondary {
        font-weight: 600;
        padding: 0.5rem 1.25rem;
        border-radius: 0.375rem;
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        transition: background-color 0.3s ease;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
        color: white;
        text-decoration: none;
    }
</style>