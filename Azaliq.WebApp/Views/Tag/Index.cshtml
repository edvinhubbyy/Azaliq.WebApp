@model IEnumerable<Azaliq.ViewModels.Tag.TagIndexViewModel>

@{
    ViewData["Title"] = "Tags";
}

<h2>@ViewData["Title"]</h2>

@if (User.IsInRole("Admin") || User.IsInRole("Manager"))
{
    <p>
        <a asp-action="Add" class="btn btn-primary">Add Tag</a>
    </p>
}

<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
    </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var tag in Model)
        {
            <tr>
                <td>@tag.Name</td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="2" class="text-center">No tags found.</td>
        </tr>
    }
    </tbody>
</table>




@if (User.IsInRole("Admin") || User.IsInRole("Manager"))
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th style="width: 150px;">Actions</th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var tag in Model)
            {
                <tr>
                    <td>@tag.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@tag.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" class="text-center">No tags found.</td>
            </tr>
        }
        </tbody>
    </table>
}