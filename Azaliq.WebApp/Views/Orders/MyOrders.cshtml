@model IEnumerable<Azaliq.ViewModels.Order.OrderViewModel>

@{
    ViewData["Title"] = "My Orders";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>You have no orders yet.</p>
}
else
{
    foreach (var order in Model)
    {
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-sm table-bordered align-middle text-center">
                    <thead class="table-light">
                    <tr>
                        <th style="width: 30%;">Product</th>
                        <th style="width: 15%;">Image</th>
                        <th style="width: 10%;">Quantity</th>
                        <th style="width: 15%;">Price</th>
                        <th style="width: 15%;">Subtotal</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in order.Items)
                    {
                        <tr>
                            <td class="text-start" style="white-space: normal; word-wrap: break-word;">
                                @item.ProductName
                            </td>
                            <td>
                                <img src="@item.ImageUrl" alt="@item.ProductName" style="height: 40px; max-width: 100%;" />
                            </td>
                            <td>@item.Quantity</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.Subtotal.ToString("C")</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <p class="fw-bold text-end mb-0">Total: @order.TotalAmount.ToString("C")</p>
        </div>
    }
}