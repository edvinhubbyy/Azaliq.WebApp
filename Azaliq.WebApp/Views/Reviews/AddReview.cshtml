@model Azaliq.ViewModels.Review.ReviewInputModel

@{
    ViewData["Title"] = "Add Review";
}

<div class="container mt-4">
    <h2>Add a Review for Product #@Model.ProductId</h2>
    
    <form asp-controller="Reviews" asp-action="AddReview" method="post" class="mt-3">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="ProductId"/>

        <div class="mb-3">
            <label asp-for="Rating" class="form-label">Rating (1-5)</label>
            <input asp-for="Rating" type="number" min="1" max="5" class="form-control" required/>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Comment" class="form-label">Comment</label>
            <textarea asp-for="Comment" rows="4" class="form-control" required></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit Review</button>
        <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}