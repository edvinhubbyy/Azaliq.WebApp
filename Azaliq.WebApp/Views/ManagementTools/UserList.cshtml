@model List<Azaliq.ViewModels.Admin.UserWithRoleViewModel>

@{
    ViewData["Title"] = "User Role Management";
}

<h2>User Role Management</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Info"] != null)
{
    <div class="alert alert-info">@TempData["Info"]</div>
}

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Email</th>
            <th>Username</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            var isManager = user.IsManager;
            var toggleAction = isManager ? "RemoveManagerRole" : "PromoteToManager";
            var toggleButtonClass = isManager ? "btn-danger" : "btn-success";
            var toggleButtonText = isManager ? "Demote Manager" : "Promote to Manager";
            var toggleIcon = isManager ? "⬇️" : "⬆️";

            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>
                    <div class="d-flex gap-2">
                        <!-- Promote/Demote Button -->
                        <form asp-action="@toggleAction" asp-controller="ManagementTools" method="post" style="margin:0;">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button class="btn @toggleButtonClass btn-sm" type="submit">
                                @toggleIcon @toggleButtonText
                            </button>
                        </form>

                        <!-- Delete Button -->
                        <form asp-action="DeleteUser" asp-controller="ManagementTools" method="post" style="margin:0;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button class="btn btn-outline-danger btn-sm" type="submit">
                                🗑️ Delete
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
