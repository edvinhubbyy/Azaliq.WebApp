@using Azaliq.Data.Models.Models
@model List<ArchivedUser>

@{
    ViewData["Title"] = "Archived Users";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-hover">
    <thead class="table-light">
    <tr>
        <th>Email</th>
        <th>Username</th>
        <th>Archived On</th>
        <th>Details</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.UserName</td>
            <td>
                <a asp-action="ArchivedUserDetails" asp-route-id="@user.Id" class="btn btn-info btn-sm">View Orders</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to Active Users</a>
</p>