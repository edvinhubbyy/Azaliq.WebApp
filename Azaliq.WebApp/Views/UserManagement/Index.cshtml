@using Azaliq.Data.Models.Models
@model List<ArchivedUser>

<h1>Archived Users</h1>

<table class="table">
    <thead>
    <tr>
        <th>UserName</th>
        <th>Email</th>
        <th>Archived On</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <a asp-action="ArchivedUserDetails" asp-route-id="@user.Id">View Orders</a>
            </td>
        </tr>
    }
    </tbody>
</table>